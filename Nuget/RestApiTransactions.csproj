<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <Title>$(AssemblyName)</Title>
    <Description>Middleware that adds transactions for REST API</Description>
    <Product>$(AssemblyName)</Product>
    <Company />
    <Authors>Mikko KARHUNEN</Authors>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Copyright>Copyright © Mikko KARHUNEN</Copyright>
    <PackageProjectUrl>https://github.com/mhk76/RestApiTransactions</PackageProjectUrl>
    <RepositoryUrl>https://github.com/mhk76/RestApiTransactions</RepositoryUrl>
    <PackageReadmeFile>readme.md</PackageReadmeFile>
  </PropertyGroup>

  <ItemGroup>
    <FrameworkReference Include="Microsoft.AspNetCore.App" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\readme.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
